rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Autorise la lecture publique de tous les fichiers.
    // L'écriture reste restreinte aux utilisateurs authentifiés.
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
