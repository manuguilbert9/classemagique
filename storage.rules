rules_version = '2';

// Firebase Storage rules for Classe Magique
service firebase.storage {
  match /b/{bucket}/o {

    // Rules for story images
    match /story-images/{imageId} {
      // Allow anyone to read story images (public access for viewing)
      allow read: if true;

      // Allow write access for server-side uploads
      // Images are AI-generated with unique filenames, so this is safe
      allow create, write: if true;

      // Allow delete access for cleanup operations
      allow delete: if true;
    }

    // Catch-all rule for other paths (restrictive by default)
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
